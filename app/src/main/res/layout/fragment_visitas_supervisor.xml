<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margen_medium"
    tools:context=".fragments.generales.FragmentVisitasSupervisor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBluePrimary"
        android:id="@+id/formulario_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/visita_titulo"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/greyBluePrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/visita_visitas_hogar_supervisor"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:layout_marginLeft="@dimen/margen_small"
            android:layout_marginBottom="@dimen/margen_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/margen_small"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="@dimen/longitud_input_n"
                        android:theme="@style/TemaCabeceraVisitas"
                        android:text="@string/visita_numero"
                        android:background="@color/greyBluePrimaryDark"
                        android:layout_marginRight="1dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="1dp"
                        android:theme="@style/TemaCabeceraVisitas"
                        android:background="@color/greyBluePrimaryDark"
                        android:text="@string/visita_fecha"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_marginRight="1dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="1dp"
                            android:background="@color/greyBluePrimaryDark"
                            android:theme="@style/TemaCabeceraVisitas"
                            android:text="@string/visita_hora"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginRight="1dp"
                                android:background="@color/greyBluePrimaryDark"
                                android:theme="@style/TemaCabeceraVisitas"
                                android:text="@string/visita_de"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/greyBluePrimaryDark"
                                android:theme="@style/TemaCabeceraVisitas"
                                android:text="@string/visita_a"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@color/greyBluePrimaryDark"
                        android:theme="@style/TemaCabeceraVisitas"
                        android:text="@string/visita_resultado_visita"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margen_small">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:tint="@color/colorIcons"
                        android:backgroundTint="@color/greyBluePrimaryDark"
                        android:layout_margin="@dimen/margen_small"
                        android:src="@drawable/ic_add"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>