<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ricindigus.empove2018"
    android:versionCode="0"
    android:versionName="0.0.9"
    >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mansion"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mansion"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.EncuestaActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_encuesta"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.MarcoActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.agregacion.AgregarResidenteActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.agregacion.AgregarRutaActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@style/TemaTransparente"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.agregacion.AgregarPersonaActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activities.admin.AdminActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activities.admin.AdmMarcoActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.ViviendaActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="@string/title_activity_vivienda"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.HogarActivity"
            android:label="@string/title_activity_hogar"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.ExportarActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activities.ImportarActivity"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>