<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margen_medium"
    tools:context=".fragments.generales.FragmentVisitasEncuestador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBluePrimary"
        android:id="@+id/formulario_layout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/visita_titulo"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/greyBluePrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/visita_visitas_hogar"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/margen_small"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margen_small"
                    android:background="@color/greyBluePrimaryDark">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/longitud_input_n"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_nro"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_nombre"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_parentesco"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_sexo"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_edad"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:theme="@style/TemaCabeceraP309"
                        android:text="@string/modulo_2_cab_estado_civil"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margen_small">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:backgroundTint="@color/greyBluePrimaryDark"
                        android:layout_margin="@dimen/margen_small"
                        android:src="@drawable/ic_person_add"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>