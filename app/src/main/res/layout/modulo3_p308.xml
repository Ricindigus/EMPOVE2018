<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margen_small"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_3_p308"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="32dp">
        <Spinner
            android:id="@+id/mod3_308_spinner_C3_P308_E"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_estados"
            android:hint="@string/modulo_3_p308_sp1"/>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margen_medium"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="32dp">
        <Spinner
            android:id="@+id/mod3_308_spinner_C3_P308_M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/modulo_3_p308_sp2"/>
    </android.support.v7.widget.CardView>

</LinearLayout>