<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_6_p624"/>
    <RadioGroup
        android:id="@+id/mod5_624_rg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/mod5_624_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp1"/>
        <RadioButton
            android:id="@+id/mod5_624_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp2"/>
        <RadioButton
            android:id="@+id/mod5_624_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp3"/>
        <RadioButton
            android:id="@+id/mod5_624_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp4"/>
        <RadioButton
            android:id="@+id/mod5_624_rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp5"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/mod5_624_rb10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margen_small"
                android:text="@string/modulo_6_p624_sp6"/>
            <EditText
                android:layout_width="@dimen/width_input_especifique"
                android:layout_height="@dimen/altura_input_especifique"
                android:paddingLeft="@dimen/margen_small"
                android:hint="@string/modulo_6_p624_especifique"
                android:inputType="text"
                android:background="@drawable/input_text_disabled"/>
        </LinearLayout>
        <RadioButton
            android:id="@+id/mod5_624_rb11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_6_p624_sp7"/>
    </RadioGroup>
</LinearLayout>