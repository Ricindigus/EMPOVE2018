                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/caratula_nombre_via"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/greyBluePrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_margin="1dp"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/formulario_sp_spinner"
                    android:layout_height="@dimen/altura_spinner"
                    android:layout_width="match_parent"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/caratula_array_tipo_via"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
