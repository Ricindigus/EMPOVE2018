<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_6_p618"/>
    <CheckBox
        android:id="@+id/mod6_618_checkbox_C6_P618_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_6_p618_sp1"/>
    <CheckBox
        android:id="@+id/mod6_618_checkbox_C6_P618_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_6_p618_sp2"/>
    <CheckBox
        android:id="@+id/mod6_618_checkbox_C6_P618_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_6_p618_sp3"/>
    <CheckBox
        android:id="@+id/mod6_618_checkbox_C6_P618_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_6_p618_sp4"/>
    <CheckBox
        android:id="@+id/mod6_618_checkbox_C6_P618_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_6_p618_sp5"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/mod6_618_checkbox_C6_P618_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:text="@string/modulo_6_p618_sp6"/>
        <EditText
            android:id="@+id/mod6_618_edittext_C6_P618_O"
            style="@style/TemaInputEspecifique"/>
    </LinearLayout>

</LinearLayout>