<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_3_p314"/>
    <RadioGroup
        android:id="@+id/mod3_314_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/mod3_314_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_3_p314_sp1"/>
        <RadioButton
            android:id="@+id/mod3_314_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modulo_3_p314_sp2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/mod3_314_rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margen_small"
                android:text="@string/modulo_3_p314_sp3"/>
            <EditText
                android:id="@+id/mod3_314_inputEspecifique"
                android:layout_width="@dimen/width_input_especifique"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margen_small"
                android:inputType="text"
                android:background="@drawable/input_text_disabled"
                android:hint="@string/modulo_3_p314_especifique"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>