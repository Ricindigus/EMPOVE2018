<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/margen_layout_pregunta"
    android:layout_marginLeft="@dimen/margen_layout_pregunta"
    android:layout_marginBottom="@dimen/margen_layout_pregunta"
    android:paddingTop="@dimen/padding_layout_pregunta"
    android:paddingLeft="@dimen/padding_layout_pregunta"
    android:paddingRight="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_3_p309"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p309_descripcion"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TemaCabeceraP309"
            android:text="@string/modulo_3_p309_cab1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TemaCabeceraP309"
            android:text="@string/modulo_3_p309_cab2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TemaCabeceraP309"
            android:text="@string/modulo_3_p309_cab3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/TemaCabeceraP309"
            android:text="@string/modulo_3_p309_cab4"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rutas_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rutas_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_add_location" />
    </RelativeLayout>
</LinearLayout>