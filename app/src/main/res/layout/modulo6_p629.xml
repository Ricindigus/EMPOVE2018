<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_6_p629"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/altura_layout_dividido"
                android:text="@string/modulo_6_p629_sp1"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/altura_layout_dividido"
                android:text="@string/modulo_6_p629_sp2"/>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/altura_layout_dividido"
                android:text="@string/modulo_6_p629_sp3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="@dimen/altura_layout_dividido">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_small"
                    android:text="@string/modulo_6_p629_sp4"/>
                <EditText
                    android:id="@+id/mod6_629_edittext_C6_P629_O"
                    style="@style/TemaInputEspecifique"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/mod6_629_radiogroup_C6_P629_1"
                android:layout_width="@dimen/longitud_radio"
                android:layout_height="@dimen/altura_layout_dividido"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_medium"
                    android:text="@string/modulo_6_p629_si"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_6_p629_no"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/mod6_629_radiogroup_C6_P629_2"
                android:layout_width="@dimen/longitud_radio"
                android:layout_height="@dimen/altura_layout_dividido"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_medium"
                    android:text="@string/modulo_6_p629_si"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_6_p629_no"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/mod6_629_radiogroup_C6_P629_3"
                android:layout_width="@dimen/longitud_radio"
                android:layout_height="@dimen/altura_layout_dividido"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_medium"
                    android:text="@string/modulo_6_p629_si"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_6_p629_no"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/mod6_629_radiogroup_C6_P629_4"
                android:layout_width="@dimen/longitud_radio"
                android:layout_height="@dimen/altura_layout_dividido"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margen_medium"
                    android:text="@string/modulo_6_p629_si"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modulo_6_p629_no"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/mod6_629_spinner_C6_P629_1_F"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/altura_spinner"
                android:layout_margin="5dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/modulo_6_p629_frecuencia" />

            <Spinner
                android:id="@+id/mod6_629_spinner_C6_P629_2_F"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/modulo_6_p629_frecuencia" />

            <Spinner
                android:id="@+id/mod6_629_spinner_C6_P629_3_F"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/altura_spinner"
                android:layout_margin="5dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/modulo_6_p629_frecuencia" />

            <Spinner
                android:id="@+id/mod6_629_spinner_C6_P629_4_F"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/altura_spinner"
                android:layout_margin="5dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/modulo_6_p629_frecuencia" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mod6_629_edittext_C6_P629_1_M"
                android:layout_width="@dimen/longitud_input_n_horas"
                android:paddingLeft="@dimen/margen_small"
                android:paddingRight="@dimen/margen_small"
                android:layout_height="@dimen/altura_input_especifique"
                android:layout_margin="5dp"
                android:background="@drawable/input_text_disabled"
                android:text="@string/modulo_6_p629_monto"/>
            <EditText
                android:id="@+id/mod6_629_edittext_C6_P629_2_M"
                android:layout_width="@dimen/longitud_input_n_horas"
                android:paddingLeft="@dimen/margen_small"
                android:paddingRight="@dimen/margen_small"
                android:layout_height="@dimen/altura_input_especifique"
                android:layout_margin="5dp"
                android:background="@drawable/input_text_disabled"
                android:text="@string/modulo_6_p629_monto"/>
            <EditText
                android:id="@+id/mod6_629_edittext_C6_P629_3_M"
                android:layout_width="@dimen/longitud_input_n_horas"
                android:paddingLeft="@dimen/margen_small"
                android:paddingRight="@dimen/margen_small"
                android:layout_height="@dimen/altura_input_especifique"
                android:layout_margin="5dp"
                android:background="@drawable/input_text_disabled"
                android:text="@string/modulo_6_p629_monto"/>
            <EditText
                android:id="@+id/mod6_629_edittext_C6_P629_4_M"
                android:layout_width="@dimen/longitud_input_n_horas"
                android:paddingLeft="@dimen/margen_small"
                android:paddingRight="@dimen/margen_small"
                android:layout_height="@dimen/altura_input_especifique"
                android:layout_margin="5dp"
                android:background="@drawable/input_text_disabled"
                android:text="@string/modulo_6_p629_monto"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
