<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_6_p615"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margen_small"
        android:gravity="center">
        <EditText
            android:id="@+id/mod6_615_edittext_C6_P615_MON"
            android:layout_width="@dimen/longitud_input_n_horas"
            android:layout_height="@dimen/altura_input_especifique"
            android:background="@drawable/input_text_enabled"
            android:paddingLeft="@dimen/margen_small"
            android:layout_marginRight="@dimen/margen_large"
            android:hint="@string/modulo_6_p615_dinero"/>
        <EditText
            android:id="@+id/mod6_615_edittext_C6_P615_ESP"
            android:layout_width="@dimen/longitud_input_n_horas"
            android:layout_height="@dimen/altura_input_especifique"
            android:background="@drawable/input_text_enabled"
            android:paddingLeft="@dimen/margen_small"
            android:hint="@string/modulo_6_p615_especie"/>
    </LinearLayout>
</LinearLayout>