<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_5_p502"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margen_small"
        android:padding="@dimen/margen_medium"
        android:background="@drawable/marco_subpregunta">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="1dp">
            <Spinner
                android:id="@+id/mod5_502_spinner_C5_P502"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v7.widget.CardView>
        <EditText
            android:layout_marginTop="@dimen/margen_small"
            android:id="@+id/mod5_502_edittext_C5_P502_o"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:paddingLeft="@dimen/margen_small"
            android:inputType="text"
            android:enabled="false"
            android:background="@drawable/input_text_disabled"
            android:hint="Especifique"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/mod5_502_checkbox_C5_P502_C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_5_p502_sp1"/>
</LinearLayout>