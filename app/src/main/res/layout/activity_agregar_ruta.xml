<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activities.agregacion.AgregarRutaActivity">
    <LinearLayout
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/margen_medium"
        android:background="@drawable/marco_pregunta"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR RUTA"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="@dimen/margen_medium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margen_small"
            android:background="@drawable/marco_pregunta"
            android:padding="@dimen/margen_medium">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/modulo_3_p309_cab1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margen_small">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/modulo_3_p309_cab2" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/marco_pregunta"
            android:layout_margin="@dimen/margen_small"
            android:padding="@dimen/margen_small">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modulo_3_p309_cab3" />
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margen_small"
                android:background="@drawable/input_text_enabled">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/altura_spinner"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/modulo_3_p309_array_modo_transito" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/margen_small"
            android:orientation="vertical"
            android:background="@drawable/marco_pregunta"
            android:padding="@dimen/margen_small">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="@string/modulo_3_p309_cab4"
                android:textSize="@dimen/margen_medium" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/margen_small"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margen_small"
                    android:text="@string/modulo_3_p303_mes"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="@dimen/margen_large"
                    android:background="@drawable/input_text_enabled"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/margen_small"
                    android:text="@string/modulo_3_p303_anio"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/input_text_enabled"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margen_small"
                android:layout_margin="@dimen/margen_small"
                android:textColor="@color/colorPrimary"
                android:text="CANCELAR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margen_small"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/margen_small"
                android:text="GUARDAR"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>