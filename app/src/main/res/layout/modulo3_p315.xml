<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_layout_pregunta"
    android:padding="@dimen/padding_layout_pregunta"
    android:background="@drawable/marco_pregunta">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TemaTextoPregunta"
        android:text="@string/modulo_3_p315"/>
    <CheckBox
        android:id="@+id/mod3_315_ck1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp1"/>
    <CheckBox
        android:id="@+id/mod3_315_ck2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp2"/>
    <CheckBox
        android:id="@+id/mod3_315_ck3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp3"/>
    <CheckBox
        android:id="@+id/mod3_315_ck4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp4"/>
    <CheckBox
        android:id="@+id/mod3_315_ck5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp5"/>
    <CheckBox
        android:id="@+id/mod3_315_ck6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp6"/>
    <CheckBox
        android:id="@+id/mod3_315_ck7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp7"/>
    <CheckBox
        android:id="@+id/mod3_315_ck8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp8"/>
    <CheckBox
        android:id="@+id/mod3_315_ck9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp9"/>
    <CheckBox
        android:id="@+id/mod3_315_ck10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp10"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/mod3_315_ck11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:text="@string/modulo_3_p315_sp11"/>
        <EditText
            android:id="@+id/mod3_315_inputEspecifique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margen_small"
            android:hint="@string/modulo_3_p315_especifique"
            android:background="@drawable/input_text_disabled"/>
    </LinearLayout>
    <CheckBox
        android:id="@+id/mod3_315_ck12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modulo_3_p315_sp12"/>
</LinearLayout>