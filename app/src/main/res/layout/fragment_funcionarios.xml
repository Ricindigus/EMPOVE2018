<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margen_medium"
    tools:context=".fragments.generales.FragmentFuncionarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/greyBluePrimary"
        android:id="@+id/formulario_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/funcionario_titulo"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/greyBluePrimaryDark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/funcionario_encuestador"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:layout_marginLeft="@dimen/margen_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margen_small"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_dni"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_small"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_nombres"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/funcionario_supervisor"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:layout_marginLeft="@dimen/margen_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margen_small"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_dni"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_small"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_nombres"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/funcionario_coordinador"
            android:textColor="@color/colorIcons"
            android:textStyle="bold"
            android:gravity="center"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margen_small"
            android:layout_marginLeft="@dimen/margen_small"
            android:layout_marginBottom="@dimen/margen_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margen_small"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_dni"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margen_small"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/funcionario_nombres"
                        android:textStyle="bold"
                        android:padding="@dimen/margen_small"
                        android:textColor="@color/greyBluePrimary"/>
                    <EditText
                        android:visibility="visible"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/altura_input_especifique"
                        android:layout_weight="2"
                        android:layout_marginLeft="@dimen/margen_small"
                        android:inputType="numberPassword"
                        android:background="@drawable/input_text_enabled"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>